# Run manually to reformat a file:
# clang-format -i --style=file <file>
Language: Cpp
BasedOnStyle: Google

# Custom rules
AllowShortEnumsOnASingleLine: false
AllowShortIfStatementsOnASingleLine: false
ColumnLimit: 120
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '.*'
    Priority: 1
  - Regex: '<.*>'
    Priority: 2
IndentWidth: 4
